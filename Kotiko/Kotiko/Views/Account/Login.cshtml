@model Kotiko.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
}

<form id="formLogin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="LoginWindow">
        <div class="form-group">
            <h2 id="SiteLoginLabel">Вход на сайт</h2>
            <a id="Regist" asp-action="Register" asp-controller="Account">Регистрация</a><br />
            <label id="phone" asp-for="Phone">Номер телефона:</label>
            <input id="phoneInput" type="text" asp-for="Phone" />
            <span asp-validation-for="Phone" />
        </div>
        <div class="form-group">
            <label id="pass" asp-for="Password">Пароль:</label>
            <input id="passInput" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input id="LoginBtn" type="image" src="~/images/lapka3.png" value="Войти" class="btn btn btn-default" />
        </div>
    </div>
</form>