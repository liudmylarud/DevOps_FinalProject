@model Pet

@{
    ViewBag.Title = "Pet Info";
}

<div id="InfoDiv" asp-anti-forgery="true">
    <div class="InfoWindow">
        @if (Model.Avatar == null)
        {
            if (Model.PetType == PetTypes.Cat)
            {
                <a href="PetInfo?id=@Model.Id"><img id="AvatarImageInfo" src="~/images/uncat.png" /></a>
            }
            if (Model.PetType == PetTypes.Dog)
            {
                <a href="PetInfo?id=@Model.Id"><img id="AvatarImageInfo" src="~/images/undog.png" /></a>
            }
            if (Model.PetType == PetTypes.Other)
            {
                <a href="PetInfo?id=@Model.Id"><img id="AvatarImageInfo" src="~/images/unrab.png" /></a>
            }
        }
        else
        {
            <img id="AvatarImageInfo" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
        }
        <p id="PetNameInfo">@Model.Name</p>
        <p id="PetGenderInfo"><span id="ColorTextInfo">Gender:</span> @Model.Gender</p>
        <p id="PetTypeInfo"> <span id="ColorTextInfo">Type:</span> @Model.PetType</p>
        <p id="PetTownInfo"><span id="ColorTextInfo">Town:</span> @Model.Town</p>
        <p id="PetAgeInfo"><span id="ColorTextInfo">Age:</span> @Model.Age years</p>
        <p id="PetSizeInfo"><span id="ColorTextInfo">Size:</span> @Model.PetSize</p>
        <p id="PetPhoneInfo"><span id="ColorTextInfo">Phone num.:</span> @Model.Phone</p>
        <label id="PetDescriptionInfoLabel"><span id="ColorTextInfo">Description:</span></label>
        <p id="PetDescriptionInfo">@Model.Description</p><br />
    </div>
</div>
